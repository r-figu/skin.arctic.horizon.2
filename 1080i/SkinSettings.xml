<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">30000</defaultcontrol>
    <include>Action_Settings_Onload</include>
    <onunload>RunScript(script.skinshortcuts,type=buildxml&amp;mainmenuID=300&amp;levels=1&amp;group=mainmenu|powermenu|searchmenu)</onunload>
    <controls>
        <include content="Object_Control">
            <param name="control" value="image" />
            <texture colordiffuse="main_bg_100">common/bg.jpg</texture>
        </include>
        <include content="Dialog_SettingsCategory_Background">
            <include content="Dialog_SettingsCategory_ChangerGroup">
                <include content="Dialog_SettingsCategory_LeftGroup">
                    <control type="list" id="3">
                        <top>row_height</top>
                        <width>dialog_category_width</width>
                        <onleft>30000</onleft>
                        <onup>-</onup>
                        <onright>5</onright>
                        <ondown>20</ondown>
                        <pagecontrol>61</pagecontrol>
                        <itemlayout height="row_height">
                            <control type="label">
                                <textoffsetx>dialog_pad</textoffsetx>
                                <label>$INFO[ListItem.Label]</label>
                            </control>
                        </itemlayout>
                        <focusedlayout height="row_height">
                            <control type="label">
                                <visible>Control.HasFocus(30000)</visible>
                                <textoffsetx>dialog_pad</textoffsetx>
                                <label>$INFO[ListItem.Label]</label>
                            </control>
                            <control type="group">
                                <visible>!Control.HasFocus(30000)</visible>
                                <control type="image">
                                    <include>Texture_Highlight</include>
                                </control>
                                <control type="label">
                                    <textcolor>$VAR[ColorSelected]</textcolor>
                                    <textoffsetx>dialog_pad</textoffsetx>
                                    <label>$INFO[ListItem.Label]</label>
                                </control>
                            </control>
                        </focusedlayout>
                        <content>
                            <item id="1">
                                <label>$LOCALIZE[31177]</label>
                            </item>
                            <item id="2">
                                <label>$LOCALIZE[480]</label>
                            </item>
                            <item id="3">
                                <label>$LOCALIZE[31174]</label>
                            </item>
                            <item id="4">
                                <label>$LOCALIZE[31180]</label>
                            </item>
                            <item id="5">
                                <label>$LOCALIZE[14086]</label>
                            </item>
                            <item id="6">
                                <label>$LOCALIZE[31186]</label>
                            </item>
                            <item id="7">
                                <label>$LOCALIZE[33029]</label>
                            </item>
                        </content>
                    </control>

                    <!-- Right Settings -->
                    <include content="Dialog_SettingsCategory_RightGroup">
                        <param name="info_label" value="$INFO[Container(30000).ListItem.Label]" />
                        <control type="grouplist" id="5">
                            <onleft>3</onleft>
                            <pagecontrol>61</pagecontrol>
                            <bottom>row_height</bottom>

                            <!-- Home -->
                            <include content="Dialog_Settings_Label" description="Home Label">
                                <param name="id" value="1000" />
                                <label>$LOCALIZE[31088]</label>
                                <visible>Container(3).HasFocus(1)</visible>
                            </include>
                            <include content="Dialog_Settings_Button" description="SkinShortcuts HomeMenu">
                                <param name="id" value="1001" />
                                <label>$LOCALIZE[31080]</label>
                                <visible>Container(3).HasFocus(1)</visible>
                                <onclick>RunScript(script.skinshortcuts,type=manage&amp;group=mainmenu)</onclick>
                            </include>
                            <include content="Dialog_Settings_Button" description="SkinShortcuts PowerMenu">
                                <param name="id" value="1002" />
                                <label>$LOCALIZE[31086]</label>
                                <visible>Container(3).HasFocus(1)</visible>
                                <onclick>RunScript(script.skinshortcuts,type=manage&amp;group=powermenu)</onclick>
                            </include>
                            <include content="Dialog_Settings_Button" description="SkinShortcuts SearchMenu">
                                <param name="id" value="1003" />
                                <label>$LOCALIZE[31151]</label>
                                <visible>Container(3).HasFocus(1)</visible>
                                <onclick>RunScript(script.skinshortcuts,type=manage&amp;group=searchmenu)</onclick>
                            </include>

                            <!-- Appearance -->
                            <include content="Dialog_Settings_Label" description="LooknFeel Label">
                                <param name="id" value="2000" />
                                <label>$LOCALIZE[24997]</label>
                                <visible>Container(3).HasFocus(2)</visible>
                            </include>
                            <include content="Dialog_Settings_Button" description="Color Selector">
                                <param name="id" value="2001" />
                                <label>$LOCALIZE[31001]</label>
                                <visible>Container(3).HasFocus(2)</visible>
                                <onclick>ActivateWindow(1111)</onclick>
                            </include>
                            <include content="Dialog_Settings_Button" description="Color Preset">
                                <param name="id" value="2002" />
                                <label>$LOCALIZE[31136]</label>
                                <visible>Container(3).HasFocus(2)</visible>
                                <onclick>ActivateWindow(1115)</onclick>
                            </include>
                            <include content="Dialog_Settings_Button" description="Positional widgets show background">
                                <param name="id" value="2003" />
                                <param name="control" value="radiobutton" />
                                <label>$LOCALIZE[31176]</label>
                                <visible>Container(3).HasFocus(2)</visible>
                                <onclick>Skin.ToggleSetting(HomeFanart)</onclick>
                                <selected>!Skin.HasSetting(HomeFanart)</selected>
                            </include>
                            <include content="Dialog_Settings_Button" description="Use EPGEventIcon for PVR window backgrounds">
                                <param name="id" value="2004" />
                                <param name="control" value="radiobutton" />
                                <label>$LOCALIZE[31190]</label>
                                <visible>Container(3).HasFocus(2)</visible>
                                <onclick>Skin.ToggleSetting(PVR.DisableEPGEventIconFanart)</onclick>
                                <selected>!Skin.HasSetting(PVR.DisableEPGEventIconFanart)</selected>
                            </include>
                            <include content="Dialog_Settings_Button" description="Background">
                                <param name="id" value="2099" />
                                <label>$LOCALIZE[31007]</label>
                                <visible>Container(3).HasFocus(2)</visible>
                                <onclick>ActivateWindow(1112)</onclick>
                            </include>


                            <!-- Navigation -->
                            <include content="Dialog_Settings_Label" description="Navigation">
                                <param name="id" value="3000" />
                                <label>$LOCALIZE[31174]</label>
                                <visible>Container(3).HasFocus(3)</visible>
                            </include>
                            <include content="Dialog_Settings_Button" description="Pressing Back from EPG guide">
                                <param name="id" value="3001" />
                                <param name="control" value="radiobutton" />
                                <label>$LOCALIZE[31175]</label>
                                <visible>Container(3).HasFocus(3)</visible>
                                <onclick>Skin.ToggleSetting(PVR.DisableOnBackMenu)</onclick>
                                <selected>!Skin.HasSetting(PVR.DisableOnBackMenu)</selected>
                            </include>
                            <include content="Dialog_Settings_Button" description="Pressing Up opens Submenu">
                                <param name="id" value="3002" />
                                <param name="control" value="radiobutton" />
                                <label>$LOCALIZE[31179]</label>
                                <visible>Container(3).HasFocus(3)</visible>
                                <onclick>Skin.ToggleSetting(DisableSubmenuOnUp)</onclick>
                                <selected>!Skin.HasSetting(DisableSubmenuOnUp)</selected>
                            </include>
                            <include content="Dialog_Settings_Button" description="Pressing Down from Scrollbar">
                                <param name="id" value="3003" />
                                <param name="control" value="button" />
                                <label>Press down from row view scrollbar opens</label>
                                <label2>$VAR[Label_Setting_RowScrollBar]</label2>
                                <visible>Container(3).HasFocus(3)</visible>
                                <onclick condition="String.IsEmpty(Skin.String(Rows.OnDown))">Skin.SetString(Rows.OnDown,Wall)</onclick>
                                <onclick condition="String.IsEqual(Skin.String(Rows.OnDown),Wall)">Skin.Reset(Rows.OnDown)</onclick>
                            </include>

                            <!-- Furniture -->
                            <include content="Dialog_Settings_Label" description="Furniture">
                                <param name="id" value="4000" />
                                <label>$LOCALIZE[31180]</label>
                                <visible>Container(3).HasFocus(4)</visible>
                            </include>
                            <include content="Dialog_Settings_Button" description="Weather clock">
                                <param name="id" value="4001" />
                                <param name="control" value="radiobutton" />
                                <label>$LOCALIZE[31181]</label>
                                <visible>Container(3).HasFocus(4)</visible>
                                <onclick condition="!Skin.String(WeatherClock,Small)">Skin.SetString(WeatherClock,Small)</onclick>
                                <onclick condition="Skin.String(WeatherClock,Small)">Skin.Reset(WeatherClock)</onclick>
                                <selected>Skin.String(WeatherClock,Small)</selected>
                            </include>

                            <!-- Playback -->
                            <include content="Dialog_Settings_Label" description="Playback">
                                <param name="id" value="5000" />
                                <label>$LOCALIZE[14086]</label>
                                <visible>Container(3).HasFocus(5)</visible>
                            </include>
                            <include content="Dialog_Settings_Button" description="Always display stop button">
                                <param name="id" value="5001" />
                                <param name="control" value="radiobutton" />
                                <label>$LOCALIZE[31182]</label>
                                <visible>Container(3).HasFocus(5)</visible>
                                <onclick>Skin.ToggleSetting(OSD.AlwaysDisplayStop)</onclick>
                                <selected>Skin.HasSetting(OSD.AlwaysDisplayStop)</selected>
                            </include>

                            <!-- Behaviour -->
                            <include content="Dialog_Settings_Label" description="Behaviour">
                                <param name="id" value="6000" />
                                <label>$LOCALIZE[31186]</label>
                                <visible>Container(3).HasFocus(6)</visible>
                            </include>
                            <include content="Dialog_Settings_Button" description="Autoscroll">
                                <param name="id" value="6001" />
                                <param name="control" value="button" />
                                <label>$LOCALIZE[31187]</label>
                                <visible>Container(3).HasFocus(6)</visible>
                                <label2>$INFO[Skin.String(AutoScrollTime)]</label2>
                                <onclick condition="!System.HasAddon(script.toolbox)">InstallAddon(script.toolbox)</onclick>
                                <onclick>SetProperty(Dialog.1.Label,$NUMBER[10] $LOCALIZE[31130])</onclick>
                                <onclick>SetProperty(Dialog.1.BuiltIn,Skin.SetString(AutoScrollTime,10s))</onclick>
                                <onclick>SetProperty(Dialog.2.Label,$NUMBER[12] $LOCALIZE[31130])</onclick>
                                <onclick>SetProperty(Dialog.2.BuiltIn,Skin.SetString(AutoScrollTime,12s))</onclick>
                                <onclick>SetProperty(Dialog.3.Label,$NUMBER[15] $LOCALIZE[31130])</onclick>
                                <onclick>SetProperty(Dialog.3.BuiltIn,Skin.SetString(AutoScrollTime,15s))</onclick>
                                <onclick>SetProperty(Dialog.4.Label,$NUMBER[20] $LOCALIZE[31130])</onclick>
                                <onclick>SetProperty(Dialog.4.BuiltIn,Skin.SetString(AutoScrollTime,20s))</onclick>
                                <onclick>SetProperty(Dialog.5.Label,$NUMBER[30] $LOCALIZE[31130])</onclick>
                                <onclick>SetProperty(Dialog.5.BuiltIn,Skin.SetString(AutoScrollTime,30s))</onclick>
                                <onclick>SetProperty(Dialog.6.Label,$NUMBER[60] $LOCALIZE[31130])</onclick>
                                <onclick>SetProperty(Dialog.6.BuiltIn,Skin.SetString(AutoScrollTime,60s))</onclick>
                                <onclick>SetProperty(Dialog.7.Label,$NUMBER[10] [LOWERCASE]$LOCALIZE[12391][/LOWERCASE])</onclick>
                                <onclick>SetProperty(Dialog.7.BuiltIn,Skin.SetString(AutoScrollTime,10m))</onclick>
                                <onclick>RunScript(script.toolbox,info=selectdialog,header=$LOCALIZE[31185])</onclick>
                            </include>
                            <include content="Dialog_Settings_Button" description="Autoclose OSD timeout">
                                <param name="id" value="6002" />
                                <param name="control" value="button" />
                                <label>$LOCALIZE[31189]</label>
                                <visible>Container(3).HasFocus(6)</visible>
                                <label2>$INFO[Skin.String(OSD_Timeout),,s]</label2>
                                <onclick>Skin.SetNumeric(OSD_Timeout)</onclick>
                            </include>


                            <!-- Details -->
                            <include content="Dialog_Settings_Label" description="Details">
                                <param name="id" value="7000" />
                                <label>$LOCALIZE[33029] / $LOCALIZE[19033]</label>
                                <visible>Container(3).HasFocus(7)</visible>
                            </include>
                            <include content="Dialog_Settings_Button" description="Aggregate full tv cast list">
                                <param name="id" value="7001" />
                                <param name="control" value="radiobutton" />
                                <label>$LOCALIZE[31191]</label>
                                <visible>Container(3).HasFocus(7)</visible>
                                <onclick>Skin.ToggleSetting(Recommendations.AggregateTvCast)</onclick>
                                <selected>Skin.HasSetting(Recommendations.AggregateTvCast)</selected>
                            </include>
                            <include content="Dialog_Settings_Button" description="Aggregate full tv crew list">
                                <param name="id" value="7002" />
                                <param name="control" value="radiobutton" />
                                <label>$LOCALIZE[31192]</label>
                                <visible>Container(3).HasFocus(7)</visible>
                                <onclick>Skin.ToggleSetting(Recommendations.AggregateTvCrew)</onclick>
                                <selected>Skin.HasSetting(Recommendations.AggregateTvCrew)</selected>
                            </include>
                        </control>
                    </include>

                </include>
            </include>
        </include>
        <include>View_Furniture_Top</include>
    </controls>

</window>
